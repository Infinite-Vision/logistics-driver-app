<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <!-- Step 1 - Owner -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="24dp">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp">

            <View
                android:id="@+id/vStep1Background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_circle_primary" />

            <ImageView
                android:id="@+id/ivStep1Checkmark"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_checkmark"
                android:visibility="gone"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/tvStep1Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvStep1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Owner"
            android:textColor="@color/text_primary"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Step 2 - Vehicle -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="24dp">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp">

            <View
                android:id="@+id/vStep2Background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_step_inactive" />

            <ImageView
                android:id="@+id/ivStep2Checkmark"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_checkmark"
                android:visibility="gone"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/tvStep2Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvStep2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Vehicle"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Step 3 - Driver -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp">

            <View
                android:id="@+id/vStep3Background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_step_inactive" />

            <ImageView
                android:id="@+id/ivStep3Checkmark"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_checkmark"
                android:visibility="gone"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/tvStep3Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvStep3Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Driver"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
